{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && CI=false npm run build",
  "outputDirectory": "client/build",
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

